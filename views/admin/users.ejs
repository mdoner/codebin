<% include ../partials/header %>
<!-- Container -->
<div class="container">
    <h1 style="color: #62B6AF;" class="text-center mt-4">Welcome back, <%= user.name %>!</h1>

    <div class="container table-responsive-xl">
        <table class="table table-striped table table-dark">
            <tr class="thead-dark">
                <th>Email</th><th>Name</th><th>Creation date</th><th>Betatester</th><th>Admin</th>
            </tr>

            <% for(var i=0; i<docs.length; i++) { %>
                <tr>
                    <td><%= docs[i].email %></td>
                    <td><%= docs[i].name %></td>
                    <td><%= new Date(docs[i].date).toISOString().replace(/T/, ' ').replace(/\..+/, '') %></td>
                    <%if (docs[i].betatester === true) { %>
                        <td><kbd class="text-success"><%= docs[i].betatester %></kbd></td>
                    <%} else {%>
                        <td><kbd class="text-danger"><%= docs[i].betatester %></kbd></td>
                    <%} %>
                    <%if (docs[i].admin === true) { %>
                        <td><kbd class="text-success"><%= docs[i].admin %></kbd></td>
                    <%} else {%>
                        <td><kbd class="text-danger"><%= docs[i].admin %></kbd></td>
                    <%} %>
                </tr>
            <%}%>
        </table>
    </div>

    <div class="container footer text-center">
        <a href="/admin" class="btn btn-info">Admin</a>
        <a href="/dashboard" class="btn btn-info">Dashboard</a>
    </div>
</div>