<!-- Header -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark noselect">
  <a class="navbar-brand" href="/">
      <img src="/media/codebin-1.png" width="40" height="40" alt="" loading="lazy">
    </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarColor01">
    <ul class="navbar-nav mr-auto">
      <a class="navbar-brand" href="/">
        <h2 class="align-text-bottom" style="color: #62B6AF;">Codebin</h2>
      </a>
    </ul>
    <% if(name !== 'Anonymous') {%>
      <a href="/users/logout"><img style="width: 30px; height: 30px;" src="/media/logout.svg" loading="lazy"></a>
    <%}%>
  </div>
</nav>
<!-- Container -->
<div style="float: left;" class="mt-2 noselect">
  <form action="/create" id="create" method="POST">
    
    <textarea id="input" name="input" spellcheck="false" class="tabSupport" style="width:100vw; height: 40vmax; margin-left: 2rem; margin-top: 0.8rem"></textarea>
    <input type="hidden" name="name" id="name" value="<%= name ? name : "Anonymous" %>" />
    <button id="submit" type="submit" type="hidden" class="btn btn-info mt-2">Save code</button>
    <div id="recaptcha" class="g-recaptcha" data-theme="dark" data-sitekey="6LfMTc0ZAAAAACfhUtzFLaziegDNnSkHjVBUIlwG"></div>
  </form>
</div>

<script>
  $(document).ready(function() {
    $('#create').submit(function() {
      $(this).ajaxSubmit({
        error: function(xhr) {
          status('Error: ' + xhr.status);
        },
       success: function(response) {
        console.log(response);
       }
      });
      //Very important line, it disable the page refresh.
      return false;
    });
  });
</script>